@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <table class="table-hover table">
                <thead>
                </thead>
                <tbody>
                    @foreach(var c in ViewBag.Clients)
                    {
                        <tr class="client" data-client=@c.Id>
                            <td>@c.Nome</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="BtnNewClient" class="btn btn-default">Novo</button>
            <button id="BtnDeleteClient" class="btn btn-danger">Excluir</button>
            <button id="BtnSave" class="btn btn-success">Salvar</button>
        </div>
        <div class="col-sm-4">
            @Html.Partial("ClientInfo")
        </div>
        <div class="col-sm-4">
            @Html.Partial("ContactInfo")
            <button id="BtnNewContact" class="btn btn-default">Novo</button>
        </div>
    </div>
</div>
