@model Mvc_Wcf.ServiceReference1.ClienteBag
@using(Html.BeginForm("SaveClient", "Home")){
    <h2 id="clientName" data-id="@ViewBag.Client.Id" >@ViewBag.Client.Nome</h2>
    <label>Id:</label>
    <input name="ClienteBag.Id" class="textBox" id="textBoxId" type="text" value=@Model.Id />
    <label>Nome:</label>
    <input name="ClienteBag.Nome" class="textBox" id="textBoxNome" type="text" value="@Model.Nome" />
    <label>Endereço:</label>
    <input name="ClienteBag.Endereco" class="textBox" id="textBoxEndereco" type="text" value="@Model.Endereco" />
    <label>Cidade:</label>
    <input name="ClienteBag.Cidade" class="textBox" id="textBoxCidade" type="text" value="@Model.Cidade" />
    <label>Estado:</label>
    <input name="ClienteBag.Estado" class="textBox" id="textBoxEstado" type="text" value="@Model.Estado" />
    <label>Telefone:</label>
    <input name="ClienteBag.Telefone" class="textBox" id="textBoxTelefone" type="text" value="@Model.Telefone" />
    <label>Obs:</label>
    <input name="ClienteBag.Obs" class="textBox" id="textBoxObs" type="text" value="@Model.Obs" />
    <br />
    <input type="submit" value="Salvar" class="btn btn-success" />
}